<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Travel.AddPage">
    <StackLayout>

        <Entry x:Name="nameEntry" Placeholder="Name"/>
        <Entry x:Name="continentEntry" Placeholder="Continent"/>
        <Entry x:Name="countryEntry" Placeholder="Country"/>

        <Button Text="Save" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="Save_Button_Clicked"/>

    </StackLayout>
</ContentPage>